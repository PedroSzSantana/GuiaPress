<%- include('../../partials/header.ejs') %>
<body>
  <%- include('../../partials/navbar.ejs') %>

  <div class="container">
    <hr />
    <div class="card">
      <h2 class="card-header">Edição de categorias</h2>
      <form class="card-body" action="/categories/update" method="post">
        <input
          class="form-control"
          type="text"
          name="title"
          value="<%= category.title %>"
          placeholder="Defina o titulo da categoria"
        />
        <input
          class="form-control"
          type="hidden"
          name="id"
          value="<%= category.id %>"
          placeholder="Defina o titulo da categoria"
        />
        <br />
        <button type="submit" class="btn btn-success">Atualizar</button>
      </form>
    </div>
  </div>
</body>
<%- include('../../partials/footer.ejs') %>

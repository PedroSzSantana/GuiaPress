<%- include('../../partials/header.ejs') %>
<body>
  <%- include('../../partials/homenavbar.ejs') %>
  <br />
  <div class="container">
    <% result.articles.rows.forEach(article => { %>
    <div class="card">
      <div class="card-header">
        <h2><%=article.title%></h2>
      </div>
      <div class="card-body">
        <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
      </div>
    </div>
    <br />
    <% }); %>
    <div class="row">
      <div class="col">
        <% if(result.page > 1){ %>
        <a class="btn btn-warning" href="/articles/page/<%=result.page-1%>"
          ><< Back</a
        >
        <% }else{ %>
        <a class="btn btn-warning" href="/"><< Back</a>
        <% } %>
      </div>
      <% if(result.next){ %>
      <div class="col d-flex justify-content-end">
        <a class="btn btn-success" href="/articles/page/<%=result.page+1%>"
          >Next >></a
        >
      </div>
      <%}%>
    </div>
  </div>
</body>
<%- include('../../partials/footer.ejs') %>
